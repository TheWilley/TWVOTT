{
  "compilerOptions": {
    "target": "ES6", // Choose the output language version
    "module": "ESNext", // Use "ES6" or "ESNext" if exporting ES modules
    "declaration": true, // Generates .d.ts files for type definitions
    "outDir": "./dist", // Output directory for compiled files
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Enables better CommonJS/ESM interoperability
    "skipLibCheck": true // Speeds up build time
  },
  "include": ["src/**/*"] // Include files in the src directory
}
